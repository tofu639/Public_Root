@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <form method="post" asp-action="Login" class="bg-white p-6 rounded shadow-md w-full max-w-sm">
        <h2 class="text-2xl font-bold mb-4">Login</h2>
        <div class="mb-4">
            <label class="block text-sm font-medium">Username</label>
            <input name="username" class="w-full border rounded p-2" required />
        </div>
        <div class="mb-4">
            <label class="block text-sm font-medium">Password</label>
            <input name="password" type="password" class="w-full border rounded p-2" required />
        </div>
        <button class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700" type="submit" onclick="AuthenUser()>
            Login
        </button>



    </form>
</div>
